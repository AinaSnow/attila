{{!< default}}

{{#author}}

<header class="blog-header{{#if cover_image}} has-cover{{/if}}">
	<div class="inner">
		<div class="archive archive-author box archive-box">
			<span class="archive-info">
				<span class="archive-type">{{t "Author"}}</span>
				<span class="archive-count">{{plural ../pagination.total empty=(t "No Posts") singular=(t "% Post") plural=(t "% Posts")}}</span>
			</span>
			{{#if profile_image}}
				<figure class="archive-avatar">
					<img src="{{profile_image}}" alt="{{name}}" />
				</figure>
			{{else}}
				<figure class="archive-avatar avatar"></figure>
			{{/if}}
			
			<h2 class="archive-title">{{name}}</h2>
			{{#if bio}}
				<span class="archive-description">{{{bio}}}</span>
			{{/if}}
			<span class="archive-links">
				{{#if website}}
					<a target="_blank" href="{{website}}" title="{{t "Website"}}"><i class="icon icon-globe">{{> "icons/icon-globe"}}</i><span>{{t "Website"}}</span></a>
				{{/if}}
				{{#if twitter}}
					<a target="_blank" href="{{social_url type="twitter"}}" title="{{t "Twitter"}}"><i class="icon icon-twitter">{{> "icons/icon-twitter"}}</i><span>{{t "Twitter"}}</span></a>
				{{/if}}
				{{#if facebook}}
					<a target="_blank" href="{{social_url type="facebook"}}" title="{{t "Facebook"}}"><i class="icon icon-facebook">{{> "icons/icon-facebook"}}</i><span>{{t "Facebook"}}</span></a>
				{{/if}}
				{{#if linkedin}}
					<a target="_blank" href="{{social_url type="linkedin"}}" title="{{t "LinkedIn"}}"><i class="icon icon-linkedin">{{> "icons/icon-linkedin"}}</i><span>{{t "LinkedIn"}}</span></a>
				{{/if}}
				{{#if bluesky}}
					<a target="_blank" href="{{social_url type="bluesky"}}" title="{{t "BlueSky"}}"><i class="icon icon-bluesky">{{> "icons/icon-bluesky"}}</i><span>{{t "BlueSky"}}</span></a>
				{{/if}}
				{{#if threads}}
					<a target="_blank" href="{{social_url type="threads"}}" title="{{t "Threads"}}"><i class="icon icon-threads">{{> "icons/icon-threads"}}</i><span>{{t "Threads"}}</span></a>
				{{/if}}
				{{#if mastodon}}
					<a target="_blank" href="{{social_url type="mastodon"}}" title="{{t "Mastodon"}}"><i class="icon icon-mastodon">{{> "icons/icon-mastodon"}}</i><span>{{t "Mastodon"}}</span></a>
				{{/if}}
				{{#if tiktok}}
					<a target="_blank" href="{{social_url type="tiktok"}}" title="{{t "TikTok"}}"><i class="icon icon-tiktok">{{> "icons/icon-tiktok"}}</i><span>{{t "TikTok"}}</span></a>
				{{/if}}
				{{#if youtube}}
					<a target="_blank" href="{{social_url type="youtube"}}" title="{{t "YouTube"}}"><i class="icon icon-youtube">{{> "icons/icon-youtube"}}</i><span>{{t "YouTube"}}</span></a>
				{{/if}}
				{{#if instagram}}
					<a target="_blank" href="{{social_url type="instagram"}}" title="{{t "Instagram"}}"><i class="icon icon-instagram">{{> "icons/icon-instagram"}}</i><span>{{t "Instagram"}}</span></a>
				{{/if}}
			</span>
		</div>


		{{#if cover_image}}
		<div class="blog-cover cover">
			<img
			srcset="{{img_url cover_image size="s"}} 320w,
              {{img_url cover_image size="m"}} 640w,
              {{img_url cover_image size="l"}} 960w,
              {{img_url cover_image size="xl"}} 1920w"
      src="{{img_url cover_image size="xl"}}"
			alt="{{@site.title}}" />
		</div>
		{{/if}}
	</div>
</header>

{{/author}}

<div id="index" class="container">

	<main class="content" role="main">

		{{> "loop"}}

	</main>

</div>
