<div class="extra-pagination">
	{{pagination}}
</div>

{{#foreach posts visibility="all"}}

<article class="{{post_class}}">
	<div class="inner">
		<div class="box post-box">
			{{#if featured}}
				<span class="post-feature">
					<i class="icon icon-star">{{> "icons/icon-star"}}</i>
				</span>
			{{/if}}
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
			<span class="post-meta">
				<time datetime="{{date format='YYYY-MM-DD'}}">{{date format="YYYY-MM-DD"}}</time>
				<span>&nbsp;&nbsp;</span>
				{{tags separator="｜" prefix="# "}}
				</span>
			<p class="post-excerpt">{{excerpt characters="100"}}&hellip;</p>  {{!--首页展示词长度 这里是字符数给到了100--}}
		</div>
	</div>
</article>

{{/foreach}}

{{pagination}}
